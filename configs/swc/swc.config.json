{
  "$schema": "https://swc.rs/schema.json",
  "jsc": {
    "target": "es2021",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "tsx": false,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "keepClassNames": true
  },
  "sourceMaps": true,
  "exclude": [".*\\.spec\\.ts$"]
}
