{
  "$schema": "https://swc.rs/schema.json",
  "jsc": {
    "target": "es2021",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "tsx": false,
      "dynamicImport": true
    },
    "baseUrl": "./",
    "paths": {
      "@package-json": ["package.json"],
      "@src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@configs/*": ["configs/*"],
      "@question/*": ["src/contexts/question/*"],
      "@shared/*": ["src/shared/*"]
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "keepClassNames": true
  },
  "module": {
    "type": "commonjs",
    "strict": true
  },
  "sourceMaps": true,
  "exclude": [
    ".*\\.spec\\.ts$",
    ".*\\.faketory\\.ts$",
    ".*\\.mock\\.ts$"
  ]
}
